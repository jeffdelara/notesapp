<% @notes.each do |note| %>
<div class="card">
  <h1><%= link_to note.title, note, class: 'title' %></h1>
  <div class="date"><%= time_ago_in_words note.created_at %> ago</div>
  <div><%= note.content %></div>
  <div class="tool">
    <%= link_to "Show", note %> | 
    <%= link_to "Edit", edit_note_path(note) %> | 
    <%= link_to "Delete", note_path(note), method: :delete, data: { confirm: "Are you sure? "} %>
  </div>
</div>
<% end %>

<br>

<%= link_to 'New Note', new_note_path, class: 'btn' %>
